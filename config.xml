<?xml version='1.0' encoding='utf-8'?>
<widget id="com.brycekbargar.greenorpink" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GreenOrPink</name>
    <description>
        A simple Apache Cordova application to simplify my evening commute
    </description>
    <author email="brycekbargar@gmail.com" href="http://brycekbargar.com">
        Bryce
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
